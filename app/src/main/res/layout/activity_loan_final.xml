<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="15dp"
                    android:src="@drawable/app_icon"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Kumar Group"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFF1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/cardwhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Request From"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:paddingStart="30dp"
                            android:paddingTop="15dp"/>
                        <TextView
                            android:id="@+id/Empname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:paddingStart="30dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAYMENT FOR"
                            android:textSize="15sp"
                            android:paddingStart="30dp" />
                        <TextView
                            android:id="@+id/txt_dec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2nd EMI"
                            android:textColor="#313C42"
                            android:textSize="15sp"
                            android:paddingStart="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AMOUNT PAYBLE"
                            android:paddingTop="15dp"
                            android:textSize="12sp"
                            android:paddingStart="30dp" />
                        <TextView
                            android:id="@+id/txt_amt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INR 0"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:paddingStart="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAYMENT OTP"
                            android:paddingTop="12sp"
                            android:textSize="15sp"
                            android:paddingStart="30dp" />
                        <TextView
                            android:id="@+id/txt_paymentid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#313C42"
                            android:textSize="15sp"
                            android:paddingStart="30dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DATE"
                            android:paddingTop="12sp"
                            android:textSize="15sp"
                            android:paddingStart="30dp" />
                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#313C42"
                            android:textSize="15sp"
                            android:paddingStart="30dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.2"
                        android:layout_marginBottom="10dp"
                        android:background="#F5F5F5"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="For amy queries, please contact"
                            android:paddingTop="10dp"
                            android:textSize="17sp"
                            android:paddingStart="30dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kumar Group"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:paddingStart="30dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="vertical">
                            <TextView
                                android:drawableStart="@drawable/ic_loan_phone_24"
                                android:drawablePadding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7500567770 "
                                android:paddingTop="10dp"
                                android:textSize="17sp"
                                android:paddingStart="30dp" />
                            <TextView
                                android:drawableStart="@drawable/ic_loan_mail_outline_24"
                                android:drawablePadding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="M.skumarautomobiles@gmail.com"
                                android:paddingTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                android:paddingStart="30dp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button"
                    android:text="Share"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>