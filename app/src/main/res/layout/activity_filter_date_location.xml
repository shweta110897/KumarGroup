<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeTracker.ak.FilterDateLocation">

    <LinearLayout
        android:id="@+id/datefiltergroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EdtWalletSalarySlipDateOne"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/calender"
            android:drawablePadding="5dp"
            android:hint="Select Date"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/EdtWalletSalarySlipDateTwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/calender"
            android:drawablePadding="5dp"
            android:hint="Select Date"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnWalletSalarySlip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button"
            android:text="Submit"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/datefiltergroup"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/filter_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</RelativeLayout>