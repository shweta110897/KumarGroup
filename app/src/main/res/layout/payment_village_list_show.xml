<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linBookingUploadMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/cardwhite"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_name_payPen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_mobile_no_payPen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_Wta_Number_payPen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_village_payPen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_description_payPen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_Nextdate_payPen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_payment_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="5dp"
            android:text="Payment: "
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txt_pendingDoc_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pending Doc"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txt_Clear_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/gray_button_background"
            android:gravity="center"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Clear"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/lin_inqview_CSWS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/lin_MDY_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/call"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   " />

        <TextView
            android:id="@+id/lin_MDY_sms"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sms"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   " />

        <TextView
            android:id="@+id/lin_MDY_whapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/whapppng"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   " />

        <TextView
            android:id="@+id/lin_MDY_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/share"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <!--  <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="   " />

          <TextView
              android:id="@+id/lin_MDY_visit"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:background="@drawable/ic_ganeral_visit_dp"
              android:gravity="center"
              android:textColor="@color/colorWhite"
              android:textSize="20sp" />-->

    </LinearLayout>




</LinearLayout>
