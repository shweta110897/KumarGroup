<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealstageAK.DealFormGeneralActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txtEdit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:text="Edit"
                        android:padding="10dp"
                        android:paddingLeft="10dp" />

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                    <Spinner
                        android:visibility="visible"
                        android:id="@+id/spn_AddPD_ProductName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <Spinner
                        android:visibility="visible"
                        android:id="@+id/sp_model_emp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />


                    <Spinner
                        android:id="@+id/spnPassingType"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/spnPaymentType"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spnDealType"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />



                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/sp_make_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/sp_model_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_MFGYear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="MFG Year"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        />



                    <EditText
                        android:id="@+id/edt_CustomerPrice"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Customer Price"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_MarketVal"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Market Value"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_Diff"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Difference"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        />


                    <EditText
                        android:id="@+id/edtNextVisitIG"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Next Visit"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <!-- <TextView

                         android:gravity="center|start"
                         android:textSize="20sp"
                         android:background="@drawable/edittext"
                         android:id="@+id/mobile"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:layout_marginTop="10dp"
                         android:paddingLeft="10dp"
                         android:singleLine="true" />-->

                    <EditText
                        android:id="@+id/edtDescriptionIG"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Need"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />


                    <Spinner
                        android:id="@+id/spnFollowUpTypeIG"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_imageview1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Upload Visit Photo"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgUpload"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext" />

                            <TextView
                                android:id="@+id/txtUploadPhoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Photo"
                                android:layout_gravity="center"
                                android:background="@drawable/edittext"
                                android:padding="5dp"
                                android:layout_margin="20dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!--<TextView

                        android:layout_marginTop="10dp"
                        android:id="@+id/locationget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>-->

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/locationget"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:paddingLeft="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/getlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="Get Location"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btnSubmitIG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

