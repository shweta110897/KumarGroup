<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerProfileData.DocumentBoxSecondActivity"
    android:background="@color/colorBackground">

    <ScrollView
        android:scrollbars="none"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category Name:"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_categoryName_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Category Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name:"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_FnameName_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name:"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_LastName_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State:"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_State_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City:"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_City_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="District:"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_District_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter District"
                        android:inputType="text"
                        android:paddingLeft="10dp" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taluko:"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_Taluko_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Tehsil"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Village:"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_Village_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Village"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maker:"
                        android:layout_marginTop="10dp"
                        />

                    <Spinner
                        android:id="@+id/sp_make_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Model Name:"
                        android:layout_marginTop="10dp"
                        />

                    <Spinner
                        android:id="@+id/sp_model_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tractor Registration No:"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_TractorRegisterNo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter tractor no"
                        android:inputType="text"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Model MFG Year:"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_MfgYear_EP"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter MFG Year"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile No:"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/edt_mobile_number_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp No:"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_whatsapp_number_db"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:hint="Enter Whatsapp Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description Box: "
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_Description_db"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:hint="Enter Description"
                        android:inputType="textMultiLine"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Document List: "
                        android:layout_marginTop="10dp"
                        />

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Book"
                        />

                    <CheckBox
                        android:id="@+id/checkBoxBL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Loan Noc"
                        />

                    <CheckBox
                        android:id="@+id/checkBoxPC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Police Report"
                        />

                    <CheckBox
                        android:id="@+id/checkBoxSI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sarpanch I'd"
                        />

                    <CheckBox
                        android:id="@+id/checkBoxBSVF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank S.V Form"
                        />

                    <CheckBox
                        android:id="@+id/checkBoxKD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KYC Document"
                        />

                    <CheckBox
                        android:id="@+id/checkBox7_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7-12/8a Document"
                        />


                    <CheckBox
                        android:id="@+id/checkBoxForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FORM 35"
                        />

                    <CheckBox
                        android:id="@+id/checkBoxBankLoanStatement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank/Loan Statement"
                        />


                    <Button
                        android:layout_marginBottom="10dp"
                        android:id="@+id/btn_Submit_db"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>