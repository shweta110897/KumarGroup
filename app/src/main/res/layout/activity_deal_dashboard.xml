<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealstageAK.DealfirstMeetingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/spnBookingVI"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtBookAmountVI"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Booking Amount"
                        android:inputType="number"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <LinearLayout
                        android:id="@+id/main_booking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/booking_imge"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext" />

                        <TextView
                            android:id="@+id/booking_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Booking Photo"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext"
                            android:padding="5dp"
                            android:layout_margin="20dp"/>

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spnDeliveryVI"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/loanclearVI"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/dpclearVI"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/oldrcbookVI"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/edtModelNameVI"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Model Name"
                        android:inputType="text"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <LinearLayout
                        android:id="@+id/main_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/delivery_image"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext" />

                        <TextView
                            android:id="@+id/delivery_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Delivery Photo"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext"
                            android:padding="5dp"
                            android:layout_margin="20dp"/>

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spnSellLostVI"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtSellLostVI"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Sell/lose"
                        android:inputType="text"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                    <Spinner
                        android:id="@+id/spndropen"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:padding="10dp"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtdropen"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext"
                        android:hint="Description"
                        android:inputType="text"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btnSubmitVI"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

