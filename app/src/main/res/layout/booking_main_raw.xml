<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/cardwhite"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/linBookingUploadMain">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorWhite"
            android:layout_gravity="right"
            android:textSize="14dp"
            android:padding="4dp"
            android:text="pending"
            android:id="@+id/lin_MDY_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="visible" />



        <TextView
            android:id="@+id/tv_name_booking"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <!-- <TextView
             android:id="@+id/tv_mobile_no_booking"
             android:textSize="20sp"
             android:textColor="@color/colorBlack"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:singleLine="true" />-->

        <TextView
            android:id="@+id/tv_mobile_no_booking"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_Wta_Number_booking"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_village_booking"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_Type"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_Employee_name"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_Rto"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_consumer_scheme"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_model_name"
            android:textSize="20sp"
            android:textColor="@color/red_btn_bg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_description_booking"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/lin_BookingMain_call"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/call"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   " />

            <TextView
                android:id="@+id/lin_BookingMain_sms"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/sms"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   " />

            <TextView
                android:id="@+id/lin_BookingMain_whapp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/whapppng"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   " />

            <TextView
                android:id="@+id/lin_BookingMain_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/share"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/lin_BookingMain_Next"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:text="NEXT"
                android:gravity="center"
                android:textColor="@color/colorButton"
                android:textSize="20sp" />

            <!--  <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="   " />-->

           <!-- <TextView
                android:visibility="gone"
                android:text="pending"
                android:id="@+id/lin_MDY_visit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="16dp" />-->

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:textSize="14dp"
        android:padding="3dp"
        android:text="pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/new_color_design"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/hot_cold_harm"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp" />


</RelativeLayout>