<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maintenance.AddMaintenanceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Spinner
            android:id="@+id/sp_maintenance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:maxLength="10"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <EditText
            android:visibility="gone"
            android:id="@+id/edtMAType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:hint="Maintenance Type"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnMAVenEmp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:padding="10dp" />


        <Spinner
            android:id="@+id/spnMAListEmpVen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:hint="Description"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/spnAddCashTYpe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edtMAAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:hint="Amount"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtMADate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:hint="Date"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtMADescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:hint="Description"
            android:padding="10dp"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnAddInvoice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Upload Invoice"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edtAddLoanDescription"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext" />

            <TextView
                android:id="@+id/txtUploadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo"
                android:layout_gravity="center"
                android:background="@drawable/edittext"
                android:padding="5dp"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp">

            <Button
                android:id="@+id/btnAddMaintenance"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="Submit"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <!--  <Button
                  android:id="@+id/btnAddLoanCancel"
                  android:layout_width="0dp"
                  android:layout_height="50dp"
                  android:layout_weight="1"
                  android:background="@drawable/cancel_btn_background"
                  android:text="Cancel"
                  android:textSize="18dp"
                  android:layout_margin="10dp"
                  android:textAllCaps="false"
                  android:textColor="@color/colorPrimaryDark" />-->

        </LinearLayout>

    </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>