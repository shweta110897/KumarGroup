                    android:src="@drawable/ic_edit" />

                <TextView
                    android:id="@+id/tv_category_it_show_rc_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delivery_date"
                    android:layout_toLeftOf="@id/new_design"
                    android:text="1. Mark - sample lead"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/new_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv_edit"
                    android:background="@drawable/new_color_design"
                    android:padding="1dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
