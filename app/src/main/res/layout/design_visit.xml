                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="+1 202 555 0145 support@pipecycleCRM.com"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_village_show_rc_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="+1 202 555 0145 support@pipecycleCRM.com"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mobile_no_show_rc_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="9999999999"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mobile_no_show_rc_gv_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="9999999999"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model Name: "
                    android:textColor="#000" />


                <TextView
                    android:id="@+id/model_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Model"
                    android:textColor="@color/snack_red" />


            </LinearLayout>

            <TextView
                android:id="@+id/source_ofinquire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Source of Inquire : "
                android:textColor="#000" />

            <LinearLayout
                android:id="@+id/ll_passing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passing: "
                    android:textColor="#000" />


                <TextView
