                    android:padding="5dp"
                    android:src="@drawable/general_visit" />


                <TextView
                    android:id="@+id/textview_Skip"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SKIP"
