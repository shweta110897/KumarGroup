<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Inquiry.InquiryMainGeneralActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_page"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">



            <TextView

                android:id="@+id/txtInquiryVMonthly"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Monthly Inquiry "
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:padding="10dp" />


            <TextView

                android:id="@+id/txtInquiryVWeekly"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Weekly Inquiry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:padding="10dp" />

            <TextView

                android:id="@+id/txtInquiryVDaily"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Daily Inquiry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:padding="10dp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>