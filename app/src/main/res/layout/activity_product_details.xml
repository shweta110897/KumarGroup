<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".BookingDeliveryUpload.Add.ProductDetailsActivity">


    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/enable_page"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/disable_page"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/disable_page"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/disable_page"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/disable_page"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----" />

            <TextView
                android:id="@+id/txt6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/disable_page"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>


    </HorizontalScrollView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_page"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spn_smartCard_PD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:paddingLeft="10dp" />


                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spn_ScardYes_PD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/spn_AddPD_ProductName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />


                <Spinner
                    android:id="@+id/spn_AddPD_ModelName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

                <Spinner
                    android:id="@+id/spn_AddPD_desc_other"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edt_AddPD_description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:hint="Description"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    />

                <Spinner
                    android:id="@+id/spn_AddPD_cat_other"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edt_AddPD_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:hint="Enter Date"
                    android:layout_marginTop="10dp"
                    android:inputType="date"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edt_AddPD_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:hint="Enter Amount"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edt_AddPD_description_other"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:hint="Other Description"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    />




                <Button
                    android:id="@+id/btn_AddPD_Next"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>